<div class="center hero-unit">
	<h1>Crear post</h1>
	<%= form_for :post,url: {:controller => :posts, :action => 'create'} do |f|%>
		<%= f.label :titulo %><br/>
		<%= f.text_field :title %><br/>

		<%= f.label :categoria %><br/>
		<%= f.text_field :category %><br/>

		<%= f.label :texto %><br/>
		<%= f.text_area :text %><br/>

		<%= f.submit :Crear%>
	<% end %>
</div>